<% provide(:title, 'Find venues') %>
<h1>Find venues</h1>

<%= form_tag users_path, class: "search col-md-6 col-md-offset-3", :method => 'get' do %>
  <span>
    <%= text_field_tag :search, params[:search], placeholder: "Search venue name" %>
    <%= submit_tag "Search", class:"btn btn-primary", :name => nil %>
  </span>
<% end %>
<div class="users-index">
  <%= will_paginate %>
  
  <ul class="users">
    <% @users.each do |user| %>
      <%= render user %>
    <% end %>
  </ul>
  
  <%= will_paginate %>
</div>